<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/local_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/local_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湘潭市区"
        android:textSize="25dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/local_airQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轻度污染"
        android:textSize="18dp"
        android:layout_below="@id/local_name"
        android:layout_alignStart="@id/local_name"/>

    <TextView
        android:id="@+id/local_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_airQuality"
        android:layout_alignStart="@id/local_name"
        android:layout_marginStart="88dp"
        android:layout_marginTop="-25dp"
        android:text="25-54"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/local_realTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="355"
        android:textSize="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/local_name"/>

</RelativeLayout>
